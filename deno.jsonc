{
  "lock": false,
  "tasks": {
    "start": "deno run -A --watch=static/,routes/ start.ts",
    "clean": "rm -rf .litdoc && rm -rf _fresh",
    "check": "deno fmt --check && deno lint",
    "fix": "deno fmt && deno task check && deno test --allow-read=.",
    "build": "deno run -A dev.ts build",
    "preview": "deno run -A main.ts",
    "update": "echo 'Fresh update is disabled because it removes the comments in this file. Please update dependencies manually.'"
  },
  "imports": {
    // Used for writing docs.
    // Must not be used inside library code.
    "litdoc/lit.ts": "./src/lit.ts",

    // Used for Fresh framework.
    "$fresh/": "https://deno.land/x/fresh@1.4.3/",
    "preact-render-to-string": "https://esm.sh/*preact-render-to-string@6.2.1",
    "@preact/signals": "https://esm.sh/*@preact/signals@1.1.3",
    "@preact/signals-core": "https://esm.sh/*@preact/signals-core@1.2.3",
    "twind": "https://esm.sh/twind@0.16.19",
    "twind/": "https://esm.sh/twind@0.16.19/",
    "$std/": "https://deno.land/std@0.200.0/",

    // Preact version is currently locked because of eibens/slack-preact-port.
    // Fresh also depends on preact, so this is a problem.
    "preact": "https://esm.sh/preact@10.13.1",
    "preact/": "https://esm.sh/preact@10.13.1/",

    // Slate should be completely standalone.
    // It is needed for complex theming queries and transformations,
    // as well as a dependency for slate-react.
    // The overriding of the 'slate' module could happen in the theme only.
    "slate": "https://esm.sh/slate@0.94.0",

    // This is a preact compatible version of slate-react.
    // This fork should not be used in production right now.
    // If the official slate-preact becomes preact compatible,
    // this fork and its dependencies below are hopefully no longer needed.
    "slate-react": "https://raw.githubusercontent.com/eibens/slate-preact-port/v1.0.0-alpha/mod.ts",

    // These are eibens/slate-preact-port dependencies.
    // One should try to get rid of them, for example,
    // by inlining these URLs in eibens/slate-preact-port.
    "react": "https://esm.sh/preact@10.13.1/compat",
    "@juggle/resize-observer": "https://esm.sh/@juggle/resize-observer@3.4.0",
    "direction": "https://esm.sh/direction@1.0.3",
    "is-hotkey": "https://esm.sh/is-hotkey@0.1.6",
    "is-plain-object": "https://esm.sh/is-plain-object@5.0.0",
    "scroll-into-view-if-needed": "https://esm.sh/scroll-into-view-if-needed@2.2.20",
    "tiny-invariant": "https://esm.sh/tiny-invariant@1.0.6",
    "lodash/": "https://esm.sh/lodash@4.17.4/"
  },
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "preact"
  },
  "fmt": {
    "exclude": [
      "_fresh",
      "static/",
      ".litdoc/",
      ".todo"
    ]
  },
  "lint": {
    "rules": {
      "tags": [
        "fresh",
        "recommended"
      ]
    },
    "exclude": [
      "_fresh",
      "static/",
      ".todo",
      ".litdoc/"
    ]
  },
  "test": {
    "exclude": [
      ".litdoc/",
      "static/",
      ".todo"
    ]
  }
}
