{
  "lock": false,
  "tasks": {
    "fix": "deno fmt && deno lint && deno test",
    "start": "deno run -A --unstable --watch=static/,routes/ dev.ts",
    "deploy": "deployctl deploy --project=lambda-ui ./main.ts"
  },
  "importMap": "./import_map.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "preact"
  },
  "fmt": {
    "exclude": [
      "static/",
      ".todo"
    ]
  },
  "lint": {
    "exclude": [
      "static/",
      ".todo"
    ]
  },
  "test": {
    "exclude": [
      "static/",
      ".todo"
    ]
  }
}
